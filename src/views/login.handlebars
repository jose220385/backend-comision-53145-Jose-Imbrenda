<main class="container">
    <h1>Login</h1>
   <form action="/api/sessions/login" method="POST" class="form-group w-50">
    <label for="email">E-mail</label>
    <input name="email" type="email" class="form-control">
    <label for="">Password</label>
    <input name="password" type="password" class="form-control">
    <button type="submit" class="btn btn-outline-dark w-100 mt-3">Enviar</button>
    <label class="mt-5">Si no estas registrado:</label>
    <a href="/register" class="btn btn-outline-dark w-100 mt-3">Registrarse</a>
   </form>
</main>